#!/usr/bin/bash

export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/xbin

remove-ssl

if nginx -t &>/dev/null; then
	echo "========================="
	echo "== config test success =="
	echo "========================="
	nginx -s reload
else
	echo "========================"
	echo "== config test FAILED =="
	echo "========================"
	nginx -t
fi

true
