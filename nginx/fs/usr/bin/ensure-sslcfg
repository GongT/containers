#!/usr/bin/bash

cfg_file=${1-/etc/nginx/nginx.conf}
if [[ "$DISABLE_SSL" ]]; then
	while true; do
		MISSING_FILE=$(nginx -t "${}" 2>&1 | grep -o 'open() "/etc/ACME/.*" failed' | sed -E 's#^[^"]+"([^"]+).*$#\1#g')

		if [[ "$MISSING_FILE" ]]; then
			mkdir -p "$(dirname "$MISSING_FILE")" || break
			touch "$MISSING_FILE" || break
		else
			break
		fi
	done
fi
